<div class="panel panel-success">
  <div class="panel-heading">
    <%= t "word.all" %>
    <%= link_to root_url do %>
      <span class="btn btn-info">
        <%= t "lession.start" %>
      </span>
    <% end %>
  </div>
  <div class="panel-body">
    <div class="row">
      <% @categories.each_with_index do |category, index| %>
        <%= render partial: "category", locals:
          {category: category, index: index} %>
      <% end %>
    </div>
  </div>
</div>
