<div id="notification"></div>
<% provide :create, t("word.create") %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-6">
            <h3>
              <%= t "word.all" %> (<%= t "word.total" %> :
                <%= Word.all.size %>)
            </h3>
          </div>
          <div class="col-md-6">
            <form class="navbar-form search_category" role="search">
              <div class="input-group">
                <input type="text" class="form-control"
                placeholder="<%= t "search" %>" name="search">
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <button class="btn btn-primary btn-sm" data-toggle="modal"
          data-target=".bd-example-modal-lg">
            <%= t "word.create" %>
          </button>
        <div class="modal fade bd-example-modal-lg"
          tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
            aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <%= render "form" %>
            </div>
          </div>
        </div>

      <div class="panel-body">
        <table class="table table-bordered table-hover
          table-condensed table-striped">
          <thead>
            <tr class="center">
              <th class="center col-md-1"><%= t "word.index" %></th>
              <th class="center col-md-5"><%= t "word.content" %></th>
              <th class="center col-md-3"><%= t "word.answers" %></th>
              <th class="center col-md-2">
                <span class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <%= t "word.category" %>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                      <% @categories_search.each do |category|%>
                        <li>
                          <%= link_to admin_words_url(
                            :category => category.id,
                              :search => params[:search]) do %>
                            <%= category.name %>
                          <% end %>
                        </li>
                      <% end %>
                  </ul>
                </span>
              </th>
              <th class="center col-md-1">
                <%= t "word.action" %>
              </th>
              <th>
                <span data-placement="top" data-toggle="tooltip"
                  id="delete_all_word"
                  title="<%= t "word.delete_all" %>">
                  <button class="btn btn-danger btn-xs"
                    data-title="<%= t "word.delete_all" %>"
                    data-toggle="modal" data-target="#delete_all" >
                    <span class="glyphicon glyphicon-trash"></span>
                  </button>
                </span>
              </th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% if @words.size < 1 %>
              <%= t "word.nil" %>
            <% else %>
              <%= render "index" %>
            <% end %>
          </tbody>
        </table>
        <div class="center">
          <%= paginate @words %>
        </div>
      </div>
    </div>
  </div>
</div>
