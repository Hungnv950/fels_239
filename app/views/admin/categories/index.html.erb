<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t "category.create" %></div>
      <div class="panel-body">

      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= t "category.all" %> (<%= t "category.total" %> :
          <%= @categories.size %>)</h3>
        <form class="navbar-form" role="search">
          <div class="input-group">
            <input type="text" class="form-control"
            placeholder="<%= t "search" %>" name="search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="panel-body">
        <table class="table table-bordered table-hover
          table-condensed table-striped">
          <thead>
            <tr>
              <th><%= t "category.index" %></th>
              <th><%= t "category.name" %></th>
              <th><%= t "word.words" %></th>
              <th class="center"><%= t "category.action" %></th>
            </tr>
          </thead>
          <tbody>
            <% if @categories.size < 1 %>
              <%= t "category.nil" %>
            <% else %>
              <% i = page_index %>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= i %></td>
                  <td><%= category.name %></td>
                  <td><%= category.words.size %></td>
                  <td class="col-md-3 center">
                    <span data-placement="top" data-toggle="tooltip"
                      title="<%= t "category.edit" %>">
                      <button class="btn btn-primary btn-xs"
                        data-title="<%= t "category.edit" %>"
                        data-toggle="modal" data-target="#edit" >
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </span>
                    <span data-placement="top" data-toggle="tooltip"
                      title="<%= t "category.delete" %>">
                      <button class="btn btn-danger btn-xs"
                        data-title="<%= t "category.delete" %>"
                        data-toggle="modal" data-target="#delete" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </span>
                  </td>
                </tr>
                <% i = i + 1 %>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <div class="center">
          <%= paginate @categories %>
        </div>
      </div>
    </div>
  </div>
</div>
